<?xml version="1.0" encoding="UTF-8"?>
<mail version="0.2">
	<!-- if true use the mail feature -->
	<use_mail>false</use_mail>
	<!-- SMTP Server Details -->
	<smtpServer>smtp.myserver.de</smtpServer>
	<port>25</port>
	<!-- if the smtp server needs the fqdn and your local maschine -->
	<!-- has no domain configured it is not possible to use the easy .net class -->
	<!-- if true => telnet must used -->
	<smpt_server_needs_fqdn>false</smpt_server_needs_fqdn>

	<!-- if you need username / password = true -->
	<!-- if false  => no credentials            -->
	<!-- if os    => use the actual user        -->
	<use_credential>true</use_credential>
	<username password="mypassword" encrypt="false">user@mail.com</username>

	<!-- Mail -->
	<to>admin@mail.local</to>
	<from>admin@mail.local</from>
</mail>
